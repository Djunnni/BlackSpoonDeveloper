// components/HistoryBackButton.tsx
import { ArrowLeft } from "lucide-react";

export function HistoryBackButton() {
  const handleBack = () => {
    window.history.back();
  };

  return (
    <button
      onClick={handleBack}
      aria-label="뒤로가기"
      className="flex items-center justify-center w-10 h-10 rounded-full text-gray-900 hover:bg-gray-100 active:bg-gray-200 transition-colors"
    >
      <ArrowLeft className="w-6 h-6 stroke-[2.5]" />
    </button>
  );
}
